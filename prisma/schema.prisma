generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String  
  expiresAt   DateTime
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  first_name String @db.VarChar(255)
  last_name String @db.VarChar(255)
  password String
  dirs Dir[]
}

model Dir {
  id Int @id @default(autoincrement())
  name String 
  addedOn DateTime @default(now())
  user User @relation(fields: [userId], references: [id])
  userId Int
  parent Dir? @relation("parent", fields: [parentId], references: [id])
  parentId Int?
  files File[]
  dirs Dir[] @relation("parent")

}

model File {
  id Int @id @default(autoincrement())
  name String
  addedOn DateTime @default(now())
  url String
  path String
  mimetype String 
  dir Dir @relation(fields: [dirId], references: [id])
  dirId Int
}